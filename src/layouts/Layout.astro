---
interface Props {
  title: string;
}
// Supports weights 100-900
import "@fontsource-variable/inter";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <script src="/node_modules/flowbite/dist/flowbite.min.js" is:inline></script>
    <div class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full  bg-[#0c0c0f]
bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
      <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: dark light;
    --white: #f0f0f0;
    --accent: #7085de;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Inter Variable", system-ui, sans-serif;
    background: #0c0c0f;
    background-size: 224px;
    scroll-behavior: smooth;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  @media (prefers-reduced-motion) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
